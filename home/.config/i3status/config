# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        markup = pango
        colors = true
        interval = 1
        separator = "  "
}

#order += "ipv6"
#order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "disk /"
order += "volume master"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "ðŸ“¶ (%quality @ %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        # XXX: this fucking symbol ðŸ–§ just fucks everything up line-height wise on snowcrash
        #
        # if you use %speed, i3status requires root privileges
        format_up = "E %ip (%speed)"
        format_down = ""
}

battery 1 {
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_full = "ðŸ”Œ"
        status_unk = "?"
        format = "%status %percentage %remaining"
        format_down = ""
        hide_seconds = true
}

volume master {
       format = "ðŸ”Š %volume"
       format_muted = "ðŸ”ˆ"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
          pidfile = "/var/run/openvpn.pid"
          format_down = ""
          format = "VPN"
}

tztime local {
#       format = "%a %b %d %H:%M:%S"
        format = "%a %b %F %T"
}

load {
        format = "%1min %5min %15min"
#        max_threshold = ""
}

disk "/" {
        format = "%avail"
}
